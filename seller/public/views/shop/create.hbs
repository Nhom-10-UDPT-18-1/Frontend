<div class="margin-form-input">
  <form action="/create" method="POST" id="form-create-product">
    <label for="TEN_SP">Tên sản phẩm</label>
    <input
      type="text"
      class="form-control"
      id="TEN_SP"
      name="TEN_SP"
      placeholder="Tên sản phẩm"
    />
    <br />
    <label for="LOAI_SP">Loại sản phẩm</label>
    <div class="form-check">
      <input
        class="form-check-input"
        type="radio"
        name="LOAI_SP"
        id="loai1"
        value="RAU"
        checked
      />
      <label class="form-check-label" for="loai1">
        Rau
      </label>
    </div>
    <div class="form-check">
      <input
        class="form-check-input"
        type="radio"
        name="LOAI_SP"
        id="loai2"
        value="THỊT"
      />
      <label class="form-check-label" for="loai2">
        Thịt
      </label>
    </div>
    <div class="form-check">
      <input
        class="form-check-input"
        type="radio"
        name="LOAI_SP"
        id="loai3"
        value="THỰC PHẨM ĐÓNG HỘP"
      />
      <label class="form-check-label" for="loai3">
        Thực phẩm đóng hộp
      </label>
    </div>
    <br />
    <label for="GIA_SP">Giá sản phẩm</label>
    <input
      type="number"
      class="form-control"
      id="GIA_SP"
      name="GIA_SP"
      placeholder="Giá sản phẩm"
    />
    <br />
    <label for="SL_CON_LAI">Số lượng còn lại</label>
    <input
      type="number"
      class="form-control"
      id="SL_CON_LAI"
      name="SL_CON_LAI"
      placeholder="Số lượng còn lại"
    />
    <br />
    <label for="MO_TA">Mô tả</label>
    <textarea class="form-control" rows="5" id="MO_TA" name="MO_TA"></textarea>
    <br />
    <label for="ANH">Ảnh sản phẩm</label>
    <input type="file" class="form-control-file" id="ANH" name="ANH" />
    <br />
    <br />
    <button type="submit" class="btn btn-primary">Đăng sản phẩm</button>
  </form>
</div>